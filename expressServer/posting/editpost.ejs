<%- include('component/headerv2'); %>

<div class="container">
  <div class="container pt-5">
    <div class="containerbox1 p-5 rounded-1">
      <h1 class="text-center">Title Edit = <%= post.title %></h1>
      <div class="pt-5"></div>
      <form class="row g-3" action="/home/blogs/<%= post._id %>/?_method=PUT" method="POST">
        <div class="col-md-6">
          <label for="title" class="form-label">Post Your Title</label>
          <input class="form-control" id="title" name="title" value="<%= post.title %>">
        </div>
        <div class="col-md-6">
          <label for="tag" class="form-label">Post Your Topics</label>
          <input class="form-control" id="tag" name="tag" value="<%= post.tag %>">
        </div>
        <div class="col-12">
          <label for="image" class="form-label">Post Your Image URL</label>
          <input class="form-control" id="image" name="image" value="<%= post.image %>">
        </div>
        <div class="col-12">
          <label for="description" class="form-label" rows="5">Post Your Post Description</label>
          <textarea class="form-control" id="description" name="description" rows="8" placeholder="Enter Your New Post Description"></textarea>
        </div>
        <div class="col-12">
          <button type="submit" class="btn w-100 btn-primary" onclick="showConfirmation()">Publish</button>
        </div>
        <script>
          function showConfirmation() {
            if (confirm("Are you sure you want to change?")) {
              console.log("Publishing...");
              } else {
                console.log("Publishing canceled.");
                 }
            }
        </script>  
      </form>
    </div>
  </div>
</div>


